<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition android:id="@+id/transition_image"
        app:constraintSetStart="@+id/constraint1"
        app:constraintSetEnd="@+id/constraint2"
        >
        <OnSwipe
            app:dragDirection="dragRight"
            app:touchAnchorId="@+id/profile"
            app:touchAnchorSide="bottom"
            />

        <KeyFrameSet>


            <KeyAttribute
                app:motionTarget="@id/background"
                app:framePosition="100"
                android:translationY="-100dp"
                />






        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/constraint1">
        <Constraint android:id="@+id/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            >
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0"
                />
        </Constraint>
        <Constraint
            android:id="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintStart_toStartOf="@id/profile"
            app:layout_constraintEnd_toEndOf="@id/profile"
            >
            <CustomAttribute app:attributeName="text"
                app:customStringValue="Mr Developer"
                />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/constraint2">
        <Constraint android:id="@id/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:rotation="360"
            >
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1"
                />
        </Constraint>

        <Constraint
            android:id="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <CustomAttribute
                app:attributeName="text"
                app:customStringValue="Miss Developer"/>
        </Constraint>
    </ConstraintSet>


</MotionScene>
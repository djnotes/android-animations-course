<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300"
        motion:motionInterpolator="overshoot"
        motion:pathMotionArc="flip"
        >

        <OnClick motion:targetId="@+id/fab" />

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/note"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/audio"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/audio"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            motion:layout_constraintBottom_toTopOf="@id/fab"
            android:layout_marginEnd="@dimen/default_margin"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/fab"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:transitionEasing="cubic(0.1,0.79,1,0)" >
            <CustomAttribute motion:attributeName="scale"
                motion:customFloatValue="1.0"

                />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/fab"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:rotationX="0"
            android:rotation="45"
            motion:pathMotionArc="none"
            android:alpha="0.8"
            >
            <CustomAttribute motion:attributeName="backgroundColor"
                motion:customColorValue="@color/purple_200"
                />
            <CustomAttribute motion:attributeName="scale"
                motion:customFloatValue="1.2"
                />

        </Constraint>
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/fab"
            motion:layout_constraintEnd_toEndOf="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:id="@+id/note" />

        <Constraint
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/note"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:id="@+id/audio" />


    </ConstraintSet>
</MotionScene>
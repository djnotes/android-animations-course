<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="cross"
                android:pathData="M 2 22 L 22 2 M 2 2 L 22 22"
                android:strokeColor="#ff0000"
                android:strokeWidth="2"/>
        </vector>
    </aapt:attr>
    <target android:name="cross">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:startOffset="30"
                    android:duration="270"
                    android:valueFrom="M 2 22 L 12 12 L 22 2 M 22 22 L 2 2"
                    android:valueTo="M 2 16 L 4 20 L 22 2 M 22 22 L 22 22"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeColor"
                    android:startOffset="30"
                    android:duration="270"
                    android:valueFrom="#ff0000"
                    android:valueTo="#008000"
                    android:valueType="colorType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
